#!ipxe

goto ${menu} ||

:live_menu
set os KDE Neon
menu ${os} - Current Arch [ ${arch} ]
iseq ${arch} x86_64 && set arch_a amd64 || set arch_a ${arch}
item --gap ${os} Versions
item user ${space} ${os} User
choose live_version || goto live_exit
goto ${live_version}

:user
set squash_url ${live_endpoint}/ubuntu-squash/releases/download/20210610-0944-92641c1f/filesystem.squashfs
set kernel_url ${live_endpoint}/ubuntu-squash/releases/download/20210610-0944-92641c1f/
goto user-boot

:user-boot
imgfree
kernel ${kernel_url}vmlinuz ip=dhcp boot=casper netboot=url url=${squash_url} initrd=initrd.lz ${cmdline}
initrd ${kernel_url}initrd.lz
boot

:live_exit
clear menu
exit 0
